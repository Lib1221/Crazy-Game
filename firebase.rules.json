{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["email"],
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid",
        "chats": {
          ".indexOn": ["joinedAt"]
        }
      }
    },
    "chats": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$chatId": {
        ".read": "auth != null && data.child('metadata/participants').hasChild(auth.uid)",
        ".write": "auth != null && data.child('metadata/participants').hasChild(auth.uid)",
        "messages": {
          ".read": "auth != null && root.child('chats').child($chatId).child('metadata/participants').hasChild(auth.uid)",
          ".write": "auth != null && root.child('chats').child($chatId).child('metadata/participants').hasChild(auth.uid)",
          ".indexOn": ["timestamp"]
        }
      }
    },
    "group_chats": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$chatId": {
        ".read": "auth != null && data.child('participants').hasChild(auth.uid)",
        ".write": "auth != null && data.child('participants').hasChild(auth.uid)",
        "messages": {
          ".read": "auth != null && root.child('group_chats').child($chatId).child('participants').hasChild(auth.uid)",
          ".write": "auth != null && root.child('group_chats').child($chatId).child('participants').hasChild(auth.uid)",
          ".indexOn": ["timestamp"]
        },
        "participants": {
          ".indexOn": ["joinedAt"]
        }
      }
    }
  }
} 